<!DOCTYPE html>
<html lang="en">
  <%- include('./head_include.ejs' ); -%>

  <body>
    <%- include('./nav.ejs' ); -%>

    <div class="main-wrapper">
      <%- include('./sidebar.ejs' ); -%>

      <div class="page-wrapper">
        <div class="content container-fluid">
          <div class="row">
            <div class="card-header text-center bold">
              <h3>Human Vitals for <%=patient[0].patientname %></h3>
            </div>
            <div class="col-lg-12">
              <div class="row">
                <div class="col-md-12 col-lg-6">
                  <div class="card card-chart">
                    <div class="card-header">
                      <div class="row align-items-center">
                        <div class="col-6">
                          <h5 class="card-title">Heart Rate</h5>
                        </div>

                        <div class="col-6">
                          <ul class="list-inline-group text-right mb-0 pl-0">
                            <li class="list-inline-item">
                              <div class="form-group mb-0 amount-spent-select">
                                <select class="form-control form-control-sm">
                                  <option>Today</option>
                                </select>
                              </div>
                            </li>
                          </ul>
                        </div>
                      </div>
                      <div class="row align-items-center border p-2 m-2">
                        <div class="col-6">
                          <h5 class="card-title">
                            <span
                              style="color: #08e242"
                              id="average-heart-rate"
                            >
                            </span>
                            <span id="hrnoti"></span>
                          </h5>
                        </div>

                        <div class="col-6">
                          <ul class="list-inline-group text-right mb-0 pl-0">
                            <li class="list-inline-item">
                              <span id="hr-icon"></span>
                            </li>
                          </ul>
                        </div>
                      </div>
                    </div>
                    <div class="card-body">
                      <div id="apexcharts-1"></div>
                    </div>
                  </div>
                </div>
                <div class="col-md-12 col-lg-6">
                  <div class="card card-chart">
                    <div class="card-header">
                      <div class="row align-items-center">
                        <div class="col-6">
                          <h5 class="card-title">Respiratory Rate</h5>
                        </div>
                        <div class="col-6">
                          <ul class="list-inline-group text-right mb-0 pl-0">
                            <li class="list-inline-item">
                              <div class="form-group mb-0 amount-spent-select">
                                <select class="form-control form-control-sm">
                                  <option>Today</option>
                                </select>
                              </div>
                            </li>
                          </ul>
                        </div>
                      </div>
                      <div class="row align-items-center border p-2 m-2">
                        <div class="col-6">
                          <h5 class="card-title">
                            <span
                              style="color: #08e242"
                              id="average-resp-rate"
                            ></span>

                            <span id="Respnoti"></span>
                          </h5>
                        </div>

                        <div class="col-6">
                          <ul class="list-inline-group text-right mb-0 pl-0">
                            <li class="list-inline-item">
                              <span id="resp-icon"></span>
                            </li>
                          </ul>
                        </div>
                      </div>
                    </div>
                    <div class="card-body">
                      <div id="apexcharts-2"></div>
                    </div>
                  </div>
                </div>
                <div class="col-md-12 col-lg-6">
                  <div class="card card-chart">
                    <div class="card-header">
                      <div class="row align-items-center">
                        <div class="col-6">
                          <h5 class="card-title">SPO2</h5>
                        </div>
                        <div class="col-6">
                          <ul class="list-inline-group text-right mb-0 pl-0">
                            <li class="list-inline-item">
                              <div class="form-group mb-0 amount-spent-select">
                                <select class="form-control form-control-sm">
                                  <option>Today</option>
                                </select>
                              </div>
                            </li>
                          </ul>
                        </div>
                      </div>
                      <div class="row align-items-center border p-2 m-2">
                        <div class="col-6">
                          <h5 class="card-title">
                            <span
                              style="color: #08e242"
                              id="average-spo2-rate"
                            ></span>
                            <span id="spo2noti"></span>
                          </h5>
                        </div>

                        <div class="col-6">
                          <ul class="list-inline-group text-right mb-0 pl-0">
                            <li class="list-inline-item">
                              <span id="spo2-icon"></span>
                            </li>
                          </ul>
                        </div>
                      </div>
                    </div>
                    <div class="card-body">
                      <div id="apexcharts-3"></div>
                    </div>
                  </div>
                </div>
                <div class="col-md-12 col-lg-6">
                  <div class="card card-chart">
                    <div class="card-header">
                      <div class="row align-items-center">
                        <div class="col-6">
                          <h5 class="card-title">Tabular Form</h5>
                        </div>
                        <div class="col-6">
                          <ul class="list-inline-group text-right mb-0 pl-0">
                            <li class="list-inline-item">
                              <div class="form-group mb-0 amount-spent-select">
                                <select class="form-control form-control-sm">
                                  <option>Today</option>
                                </select>
                              </div>
                            </li>
                          </ul>
                        </div>
                      </div>
                    </div>
                    <table id="data-table">
                      <thead>
                        <tr>
                          <th>Time</th>
                          <th>Heart Rate (BPM)</th>
                          <th>Respiratory Rate (RESP)</th>
                          <th>SPO2 (%)</th>
                        </tr>
                      </thead>
                      <tbody></tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <footer class="text-center">
          <p>Copyright Â© 2023 Data Visualisation Tool</p>
        </footer>
      </div>
    </div>
    <%- include('./script.ejs' ); -%>
    <script src="assets/plugins/apexchart/chat.js"></script>
  </body>
</html>
